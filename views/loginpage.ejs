<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <link rel="stylesheet" href="/Style/loginpage.css">
</head>
<body>

  <h1>Welcome to the Login Page</h1>

  <div class="container">
    <div class="section">
      <h2>Student Section</h2>
      <button onclick="toggleLoginForm('student')">Click here for Login</button>
      <div id="studentLoginForm" class="login-form">
        <!-- Add your student login form here -->
        <form action="/login" method="post">
          <!-- Add student login form fields -->
          <input type="email" name="email" placeholder="User name/email" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit">Login</button>
        </form>
      </div>
    </div>

    <div class="section">
      <h2>Teacher Section</h2>
      <button onclick="toggleLoginForm('teacher')">Click here for Login</button>
      <div id="teacherLoginForm" class="login-form">
        <!-- Add your teacher login form here -->
        <form action="/login" method="post">
          <!-- Add teacher login form fields -->
          <input type="email" name="email" placeholder="User name/email" required>
          <input type="password" name="password" placeholder="Password" required>
          <button type="submit">Login</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    function toggleLoginForm(type) {
      const loginForm = document.getElementById(`${type}LoginForm`);
      loginForm.style.display = (loginForm.style.display === 'none' || loginForm.style.display === '') ? 'block' : 'none';
    }
  </script>
<% if (message && message.length > 0) { %>
  <p class="flash-message"><%= message[0] %></p>
<% } %>
</body>
</html>
